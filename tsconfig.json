{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es2015", "dom"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "build",
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "./src",
        "paths": {
            "@core/*": [ "./*" ] 
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
